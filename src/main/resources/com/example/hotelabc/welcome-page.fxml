<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox
  xmlns:fx="http://javafx.com/fxml"
  fx:controller="com.example.hotelabc.controllers.MainController"
  alignment="CENTER"
  spacing="10" prefWidth="400"
  prefHeight="400"
  style="-fx-background-color: #111827;"
  fx:id="welcomePage"
>

  <Text text="Welcome to ABC Hotel" style="-fx-font-size: 20px;" fill="white" />
  <Text text="The best Hotel in XYZ" fill="#F8F4EC" />
  <Text text="Self-Booking Kiosk" fill="#7FC7D9" style="-fx-font-size: 16px;" />
  <Button text="Get Started"
    style="-fx-background-color: #4F6F52; -fx-padding: 10px; -fx-text-fill: #bad5db; -fx-font-size: 16px;" />

</VBox>